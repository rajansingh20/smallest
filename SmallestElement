#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int arr[500],n,i,max,min;
	cout<<"Enter the size of the array : ";
	cin>>n;
	cout<<"Enter all the elements of the array : ";
	for(i=0;i<n;++i)
	cin>>arr[i];
	max=arr[0];
	for(i=0;i<n;++i)
	{
		if(max<arr[i])
		max=arr[i];
	}
	min=arr[0];
	for(i=0;i<n;++i)
	{
		if(min>arr[i])
		min=arr[i];
	}
	cout<<"Largest element of the array : "<<max<<"\n";
	cout<<"Smallest element of the array : "<<"\n";
	return 0;
}
